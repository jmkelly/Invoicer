@page
@model Invoicer.Web.Pages.NotInvoicedHours.IndexModel
@{
    ViewData["Title"] = "Outstanding Hours";
}

<h2>@ViewData["Title"]</h2> 
TODO:-- only allow Create to be clicked if createInvoiceForm is valid
