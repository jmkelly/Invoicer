@page
@model Invoicer.Web.Pages.Invoices.EditModel
@{
	var isReadOnly = Model.Invoice.InvoiceStatus == Invoicer.Web.Pages.Invoices.InvoiceStatus.Sent;
	var canRemoveHours = Model.Invoice.InvoiceStatus == Invoicer.Web.Pages.Invoices.InvoiceStatus.Created;
}

<form class="form-container" method="post">
	<h2>Edit Invoice</h2>
	
	@if (TempData["SuccessMessage"] != null)
	{
		<div class="alert alert-success" role="alert">
			@TempData["SuccessMessage"]
		</div>
	}
	
	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger" role="alert">
			@TempData["ErrorMessage"]
		</div>
	}
	
	<div class="form-group">
		<label class="form-label" for="invoiceCodeInput">Invoice Code</label>
		<input type="text" class="form-control" disabled id="invoiceCodeInput" value="@Model.Invoice.InvoiceCode" />
	</div>
	<div class="form-group">
		<label for="invoiceTotalInput" class="form-label">Total</label>
		<input type="text" class="form-control" disabled id="invoiceTotalInput" value="$@Model.Invoice.Total"/>
	</div>
	<div class="form-group">
		<label for="clientNameInput">Client</label>
		<input type="text" class="form-control" disabled id="clientNameInput" value="@Model.Invoice.Client.Name"/>
	</div>
	<div class="form-group">
		<label class="form-label" for="createdAtInput">Invoice Date</label>
		<input type="date" class="form-control" asp-for="@Model.Invoice.InvoiceDate" disabled="@isReadOnly" />
	</div>
	<div class="form-group">
		<label class="form-label" for="statusInput">Status</label>
		<select asp-for="@Model.Invoice.InvoiceStatus" asp-items="@Model.Invoice.Statuses" disabled="@isReadOnly"></select>
	</div>
	
	<fieldset>
		<legend>Hours</legend>
		@foreach (var (item, index) in Model.Invoice.Hours.Select((item, index) => (item, index)))
        {
            <div class="hour-row">
                <div class="form-group hours-input">
                    <label class="form-label" for="hours_@index">Hours</label>
                    <input type="text" id="hours_@index" class="form-control" asp-for="@item.NumberOfHours" disabled="@isReadOnly" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="description_@index">Description</label>
                    <input type="text" id="description_@index" class="form-control" asp-for="@item.Description" disabled="@isReadOnly" />
                </div>

                <input type="hidden" asp-for="@item.Id"/>

                @if (canRemoveHours)
                {
                    <div>
                        <button type="submit" class="btn btn-delete " asp-page-handler="RemoveHour" asp-route-id="@Model.Invoice.Id" asp-route-hourId="@item.Id" onclick="return confirm('Are you sure you want to remove this hour entry?')" title="Remove Hour">
                            <i data-lucide="trash-2"></i>
                        </button>
                    </div>
                }
            </div>
        }
	</fieldset>

	<input type="hidden" asp-for="@Model.Invoice.Id"/>
	<div class="form-group">
		@if (!isReadOnly)
		{
			<button class="btn btn-delete" type="submit"><i data-lucide="save"></i> Save</button>
		}
		<a asp-page="./Index" class="btn">Back</a>
	</div>
</form>
